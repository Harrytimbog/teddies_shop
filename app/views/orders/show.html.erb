<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.teddy.photo_url, width: '100%' %></div>
    <div class="col">
      <h1 class="text-white">Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled text-white">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @order.teddy.name %> [<%= @order.teddy_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p class="text-white">Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
