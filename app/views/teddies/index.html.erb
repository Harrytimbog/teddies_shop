<div class="container">
  <h1 class="text-center text-white">Harrie's Teddies</h1>
  <div class="row">
    <% @teddies.each do |teddy| %>
      <div class="col-12 col-md-4">
        <div class="card m-2">
          <%= image_tag teddy.photo_url , class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= teddy.name %></h5>
            <p class="card-text"><%= teddy.category.name %></p>
            <p>Amount: <%= humanized_money_with_symbol(teddy.price) %></p>
            <%= link_to "More details", teddy_path(teddy), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
